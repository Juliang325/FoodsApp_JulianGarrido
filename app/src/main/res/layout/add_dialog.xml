<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:background="@color/backgroundDialog"
    android:orientation="vertical"
    android:padding="20dp">

    <EditText
        android:id="@+id/etDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:hint="Introduce el alimento"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />


    <EditText
        android:id="@+id/etGrHC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="GrHC: "
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/etGrLip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="GrLip: "
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/etGrPro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="GrPro: "
        android:textColor="@color/white" />


    <Button
        android:id="@+id/btnAddAlimento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CREAR ALIMENTO" />

</LinearLayout>